label rps_rock_selection_label:
    $ renpy.block_rollback()
    show screen money_count
    scene rps_pick_background
    $ selection = "rock"
    $ result = renpy.random.choice(['rock', 'paper', 'scissors','scissors'])
    jump rps_results_label

label rps_paper_selection_label:
    $ renpy.block_rollback()
    show screen money_count
    scene rps_pick_background
    $ selection = "paper"
    $ result = renpy.random.choice(['rock','rock',"paper", 'scissors'])
    jump rps_results_label

label rps_scissiors_selection_label:
    $ renpy.block_rollback()
    show screen money_count
    scene rps_pick_background
    $ selection = "scissors"
    $ result = renpy.random.choice(['rock', 'paper','paper','scissors', "scissors"])
    jump rps_results_label


label rps_results_label:
    $ renpy.block_rollback()
    scene rps_results_background
    if selection == "rock":
        show rock_selection

    if selection == "paper":
        show paper_selection:

    if selection == "scissors":
        show scissors_selection



    if result == "rock":
        show rps_rock_rolling
        $ renpy.pause(4.65, hard = True)
        show rps_rock_rolling1

        if selection == "rock":
            jump tie
        if selection == "paper":
            jump win
        if selection == "scissors":
            jump lose



    elif result == "paper":
        show rps_paper_rolling
        $ renpy.pause(4.80, hard = True)
        show rps_paper_rolling1

        if selection == "rock":
            jump lose
        if selection == "paper":
            jump tie
        if selection == "scissors":
            jump win



    elif result == "scissors":
        show rps_scissors_rolling
        $ renpy.pause(4.00, hard = True)
        show rps_scissors_rolling1

        if selection == "rock":
            jump win
        if selection == "paper":
            jump lose
        if selection == "scissors":
            jump tie


screen screen_rps_drawmoney:
    key "hide_windows" action NullAction()
    $ renpy.block_rollback()
    if rps_bet1 == True:
        text "{size=+25}{color=#00ff00}+5{/color}{color=#00ff00}${/color}{/size}" xalign 0.502 yalign 0.53
    if rps_bet2 == True:
        text "{size=+25}{color=#00ff00}+10{/color}{color=#00ff00}${/color}{/size}" xalign 0.502 yalign 0.53
    if rps_bet3 == True:
        text "{size=+25}{color=#00ff00}+25{/color}{color=#00ff00}${/color}{/size}" xalign 0.502 yalign 0.53
label tie:
    $ rps_d += 1
    show screen screen_rps_drawmoney
    show rps_draw
    $ renpy.pause(3, )
    if rps_bet1 == True:
        $ inventory.earn(5)
        $ rps_bet1 = False
        $ rps_bet2 = False
        $ rps_bet3 = False
        jump try_again_label
    if rps_bet2 == True:
        $ inventory.earn(10)
        $ rps_bet1 = False
        $ rps_bet2 = False
        $ rps_bet3 = False
        jump try_again_label
    if rps_bet3 == True:
        $ inventory.earn(25)
        $ rps_bet1 = False
        $ rps_bet2 = False
        $ rps_bet3 = False
        jump try_again_label




screen screen_rps_wonmoney:
    key "hide_windows" action NullAction()
    $ renpy.block_rollback()
    if rps_bet1 == True:
        text "{size=+25}{color=#00ff00}+10{/color}{color=#00ff00}${/color}{/size}" xalign 0.502 yalign 0.53
    if rps_bet2 == True:
        text "{size=+25}{color=#00ff00}+20{/color}{color=#00ff00}${/color}{/size}" xalign 0.502 yalign 0.53
    if rps_bet3 == True:
        text "{size=+25}{color=#00ff00}+50{/color}{color=#00ff00}${/color}{/size}" xalign 0.502 yalign 0.53
label win:
    $ rps_w += 1
    $ renpy.block_rollback()
    show rps_win
    show screen screen_rps_wonmoney
    $ renpy.pause(3,hard = True )
    if rps_bet1 == True:
        $ inventory.earn(10)
        $ rps_bet1 = False
        $ rps_bet2 = False
        $ rps_bet3 = False
        jump try_again_label
    if rps_bet2 == True:
        $ inventory.earn(20)
        $ rps_bet1 = False
        $ rps_bet2 = False
        $ rps_bet3 = False
        jump try_again_label
    if rps_bet3 == True:
        $ inventory.earn(50)
        $ rps_bet1 = False
        $ rps_bet2 = False
        $ rps_bet3 = False
        jump try_again_label




label lose:
    $ rps_l += 1
    $ renpy.block_rollback()
    show rps_lose
    $ renpy.pause(3,hard = True)
    $ rps_bet1 = False
    $ rps_bet2 = False
    $ rps_bet3 = False
    jump try_again_label

label try_again_label:
    $ renpy.block_rollback()
    hide screen screen_rps_wonmoney
    hide screen screen_rps_drawmoney
    hide screen money_count
    hide rps_win
    hide rps_lose
    hide rps_draw
    $ result = "empty"
    $ renpy.block_rollback()
    call screen try_again_screen

screen try_again_screen:
    key "hide_windows" action NullAction()
    $ renpy.block_rollback()
    vbox xalign 0 yalign 0 spacing 20:
        frame:
            style "frame_gui1"
            text "$"+str(inventory.money) size 50
    imagebutton:
        xpos 0
        ypos 0
        focus_mask True
        idle Transform("images/RPS_minigame/PlayAgainNormal.png")
        hover Transform("images/RPS_minigame/PlayAgainHover.png")
        clicked [Hide("displayTextScreen"), Hide("try_again_screen"), Jump("rps_money_select_label"),]
        unhovered Hide("displayTextScreen")
    imagebutton:
        xpos 0
        ypos 0
        focus_mask True
        idle Transform("images/RPS_minigame/PlayExitNormal.png")
        hover Transform("images/RPS_minigame/PlayExitHover.png")
        clicked [Hide("displayTextScreen"), Hide("try_again_screen"), Jump("pc_icon_label"),]
        unhovered Hide("displayTextScreen")
screen money_count:
