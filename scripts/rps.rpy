label rps_money_select_label:
    $ can_hide_windows = False
    hide rock_selection
    hide paper_selection
    hide scissors_selection
    hide rps_paper_rolling1
    hide rps_rock_rolling1
    hide rps_scissors_rolling1
    hide rps_win
    hide rps_lose
    hide rps_draw
    scene rps_bet_background
    call screen rps_money_select_screen

screen rps_money_select_screen:
    key "hide_windows" action NullAction()

    vbox xalign 0.5 yalign 0.9:
        frame:
            style "frame_gui1"
            text __("W:{color=#00ff00}[rps_w]{/color} D:{color=#ff9900}[rps_d]{/color} L:{color=#f00}[rps_l]{/color}")
    vbox xalign 0 yalign 0 spacing 20:
        frame:
            style "frame_gui1"
            text "$"+str(inventory.money) size 50

    imagebutton:
        xpos 508
        ypos 423
        focus_mask True
        idle Transform("images/RPS_minigame/Bet1-Normal.png")
        hover Transform("images/RPS_minigame/Bet1-Hover.png")
        clicked [Hide("displayTextScreen"), Jump("rps_bet1_label"),]
        unhovered Hide("displayTextScreen")

    imagebutton:
        xpos 837
        ypos 423
        focus_mask True
        idle Transform("images/RPS_minigame/Bet2-Normal.png")
        hover Transform("images/RPS_minigame/Bet2-Hover.png")
        clicked [Hide("displayTextScreen"), Jump("rps_bet2_label"),]
        unhovered Hide("displayTextScreen")

    imagebutton:
        xpos 1158
        ypos 423
        focus_mask True
        idle Transform("images/RPS_minigame/Bet3-Normal.png")
        hover Transform("images/RPS_minigame/Bet3-Hover.png")
        clicked [Hide("displayTextScreen"), Jump("rps_bet3_label"),]
        unhovered Hide("displayTextScreen")

    imagebutton:
        xpos 748
        ypos 700
        focus_mask True
        idle Transform("images/RPS_minigame/PlayExitNormal1.png")
        hover Transform("images/RPS_minigame/PlayExitHover1.png")
        clicked [Hide("rps_pick_menu_screen"), Hide("try_again_screen"),Hide("rps_money_select_screen"), Jump("pc_icon_label"),]
        unhovered Hide("displayTextScreen")

label rps_bet1_label:
    if inventory.money >= 5:
        $ inventory.drop_money(5)
        $ rps_bet1 = True
        hide screen rps_money_select_screen
        jump rps_pick_menu_label
    else:
        hide screen rps_money_select_screen
        jump rps_money_select_label

label rps_bet2_label:
    if inventory.money >= 10:
        $ inventory.drop_money(10)
        $ rps_bet2 = True
        hide screen rps_money_select_screen
        jump rps_pick_menu_label
    else:
        hide screen rps_money_select_screen
        jump rps_money_select_label

label rps_bet3_label:
    if inventory.money >= 25:
        $ inventory.drop_money(25)
        $ rps_bet3 = True
        hide screen rps_money_select_screen
        jump rps_pick_menu_label
    else:
        hide screen rps_money_select_screen
        jump rps_money_select_label

label rps_pick_menu_label:
    menu:
        "Play":
            scene rps_pick_background
            call screen rps_pick_menu_screen
        "Fuck minigame":
            $ rps_w += 1
            $ renpy.block_rollback()
            show rps_win
            show screen screen_rps_wonmoney
            $ renpy.pause(1)
            if rps_bet1 == True:
                $ inventory.earn(10)
                $ rps_bet1 = False
                $ rps_bet2 = False
                $ rps_bet3 = False
                jump rps_money_select_label
            if rps_bet2 == True:
                $ inventory.earn(20)
                $ rps_bet1 = False
                $ rps_bet2 = False
                $ rps_bet3 = False
                jump rps_money_select_label
            if rps_bet3 == True:
                $ inventory.earn(50)
                $ rps_bet1 = False
                $ rps_bet2 = False
                $ rps_bet3 = False
                jump rps_money_select_label

